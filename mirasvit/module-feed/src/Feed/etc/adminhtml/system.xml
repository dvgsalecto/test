<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="feed" showInDefault="1" showInWebsite="1" showInStore="1" type="text" translate="label"
                 sortOrder="100">
            <label>Feed</label>
            <tab>mirasvit</tab>
            <resource>Mirasvit_Feed::mst_feed_config</resource>
            <group id="general" showInDefault="1" sortOrder="10">
                <label>General Settings</label>

                <field id="reports_enabled" translate="label" type="select" sortOrder="10" showInDefault="1">
                    <label>Enable Reports</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <tooltip><![CDATA[Enable/disable feed statistic reports]]></tooltip>
                </field>
            </group>
        </section>
    </system>
</config>
